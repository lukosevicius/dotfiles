#!/bin/bash

# use lsd if it's available, otherwise use regular ls
if which lsd >/dev/null; then
    alias ll='lsd -alF'
    alias tree='lsd --tree'
else
    alias ll='ls -alF'
fi

alias la='ls -A'
alias l='ls -CF'

# cs
alias ~='cd ~'
alias -- -="cd -"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

alias .1='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'

# go to places
alias root="cd /"
alias home="cd ~"
alias docs="cd ~/Documents"
alias downs="cd ~/Downloads"
alias desktop="cd ~/Desktop"
alias pics="cd ~/Pictures"
alias proj="cd ~/projects"
alias projects="cd ~/projects"
alias react="cd ~/react"
alias py='cd ~/py'
alias htdocs='cd /Applications/MAMP/htdocs'

# wordpress
alias word="cd ~/Documents/wordpress"
alias plugins="cd ~/Documents/wordpress/plugins"
alias theme="cd wp-content/themes/*"

# dotfiles
alias dots="cd ~/dotfiles"
alias dotfiles="cd ~/dotfiles"
alias scripts="cd ~/dotfiles/scripts"
alias config="cd ~/dotfiles/config"
alias configs="cd ~/dotfiles/config"

# Gnome
alias themes='cd /usr/share/themes'
alias icons='cd /usr/share/icons'
alias fonts='cd /usr/share/fonts'

# Apache
alias apache="cd /etc/apache2"
alias sites='cd /etc/apache2/sites-available/'
alias enabled='cd /etc/apache2/sites-enabled/'
