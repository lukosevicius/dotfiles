#!/bin/bash 

# ls
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# cs
alias ~='cd ~'
alias -- -="cd -"  
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

# go to places
alias root="cd /"
alias home="cd ~"
alias docs="cd ~/Documents"
alias downs="cd ~/Downloads"
alias desktop="cd ~/Desktop"
alias pics="cd ~/Pictures"
alias word="cd ~/wordpress"
alias react="cd ~/react"
alias plugins="cd ~/wordpress/plugins"
alias dots="cd ~/dotfiles"
alias dotfiles="cd ~/dotfiles"
alias scripts="cd ~/dotfiles/scripts"
alias configs="cd ~/dotfiles/configs"
alias py='cd ~/py'
alias themes='cd /usr/share/themes'
alias icons='cd /usr/share/icons'
alias fonts='cd /usr/share/fonts'

if ( isredhat ); then
    alias apache="cd /etc/httpd"
    alias sites='cd /etc/httpd/sites-available/'
    alias enabled='cd /etc/httpd/sites-enabled/'
else
    alias apache="cd /etc/apache2"
    alias sites='cd /etc/apache2/sites-available/'
    alias enabled='cd /etc/apache2/sites-enabled/'
fi