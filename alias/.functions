# zip all files in current directory, with name backup-(current_date).zip
function backup() {
  name="backup-$(date +"%Y-%m-%d_%H-%M").zip"

  zip -r $name * > /dev/null &&
  echo "zipped all files to "$name
}

# Open /var/www directory or one of it's subfolders it argument is given
function ww() {
  if [ -z $1 ]
  then
    cd /var/www
    return
  fi

  cd /var/www/$1/html
}

# same function as ww
function www() {
  if [ -z $1 ]
  then
    cd /var/www
    return
  fi

  cd /var/www/$1/html
}