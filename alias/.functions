#!/bin/bash 

# Create a new directory and enter it
function mk() {
  sudo mkdir -p "$@" && cd "$@"
}

function ch() {
  if [ -z $1 ]
  then
    sudo chmod -R 777 *
    return
  fi

  # check if no second argument
  if [ -z $2 ]
  then
    if [ $1 == "bin" ]
    then
      sudo chmod -R 777 ~/bin
    else
      sudo chmod -R $1 *
    fi
  else
      sudo chmod -R $1 $2
  fi
}

# unzip and remove
function unziprm() {
  unzip $1 && rm $1
}
# untar and remove
function untarrm() {
  untar $1 && rm $1
}

